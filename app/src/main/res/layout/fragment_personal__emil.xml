<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragment.register_fragments.Personal_EmilFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:padding="2dp"
        android:text="邮箱需要激活后才能登陆"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:orientation="horizontal" >
        <EditText
            android:id="@+id/ed_emil"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edtext"
            android:textCursorDrawable="@drawable/color_cursor"
            android:hint="账号：请输入邮箱账号"/>

    </LinearLayout>

    <TextView
        android:id="@+id/hint_emil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:textColor="#f00" />




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_marginTop="10dp" >
        <EditText
            android:id="@+id/ed_emilcheck"
            android:layout_width="match_parent"
            android:hint="请输入密码"
            android:background="@drawable/edtext"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_height="40dp" />



    </RelativeLayout>

    <TextView
        android:id="@+id/hint_emilcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:textColor="#f00" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_marginTop="30px"
        android:orientation="horizontal" >
        <EditText
            android:id="@+id/ed_reg_emilcheck"
            android:layout_width="match_parent"
            android:hint="请确认输入密码"
            android:background="@drawable/edtext"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_height="40dp" />

    </LinearLayout>
    <TextView
        android:id="@+id/hint_reg_emilcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:textColor="#f00" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_marginTop="30px" >

        <EditText
            android:id="@+id/ed_emil_imgcheck"
            android:layout_width="224dp"
            android:hint="请输入图片验证码"
            android:background="@drawable/edtext"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_height="40dp" />

        <ImageView
            android:id="@+id/personal_reg_emil_imgcheck"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:background="#ffffff"
            android:gravity="center"
            android:text="图形验证码" />
    </RelativeLayout>
    <TextView
        android:id="@+id/hint_emil_imgcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:textColor="#f00" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"

        android:layout_marginLeft="60px"
        android:layout_marginTop="30px" >

        <CheckBox
            android:id="@+id/ch_emil_xieyi_check"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginRight="20px"
            android:layout_centerVertical="true"
            android:checked="true" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="19dp"
            android:text="我已阅读并同意《央视网网络服务使用协议》"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentRight="true"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/hint_emil_xieyi"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:textColor="#f00"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>
    <TextView
        android:id="@+id/btn_emil_register"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_marginTop="30px"
        android:gravity="center"
        android:padding="30px"
        android:background="@color/colorPrimaryDark"
        android:textSize="15dp"
        android:text="注册"
        android:textColor="#ffffff" />


</LinearLayout>