<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:padding="2dp"
        android:text="海外用户暂不支持手机号注册，您可以使用邮箱注册"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ed_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edtext"
            android:hint="账号：请输入手机账号"
            android:textCursorDrawable="@drawable/color_cursor" />

    </LinearLayout>

    <TextView
        android:id="@+id/hint_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:textColor="#f00" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_marginTop="30px">

        <EditText
            android:id="@+id/ed_phoneimgcheck"
            android:layout_width="224dp"
            android:layout_height="40dp"
            android:background="@drawable/edtext"
            android:hint="请输入图片验证码"
            android:textCursorDrawable="@drawable/color_cursor" />

        <ImageView
            android:id="@+id/personal_reg_phoneimgcheck"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:background="#ffffff"
            android:gravity="center"
             />
    </RelativeLayout>

    <TextView
        android:id="@+id/hint_phoneimagecheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:textColor="#f00" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/ed_phonecheck"
            android:layout_width="224dp"
            android:layout_height="40dp"
            android:background="@drawable/edtext"
            android:hint="请输入收到验证码"
            android:textCursorDrawable="@drawable/color_cursor" />


        <TextView
            android:id="@+id/personal_reg_phonecheck"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <TextView
        android:id="@+id/hint_phonecheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:textColor="#f00" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_marginTop="30px"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ed_phone_passwork"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edtext"
            android:hint="请输入密码"
            android:textCursorDrawable="@drawable/color_cursor" />

    </LinearLayout>

    <TextView
        android:id="@+id/hint_phonepassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:textColor="#f00" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="60px"
        android:layout_marginTop="30px">

        <CheckBox
            android:id="@+id/ch_phone_xieyi_check"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"

            android:checked="true" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:text="我已阅读并同意《央视网网络服务使用协议》"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/hint_phone_xieyi"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#f00" />
    </RelativeLayout>

    <TextView
        android:id="@+id/btn_phone_register"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_marginTop="30px"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:padding="30px"
        android:text="注册"
        android:textColor="#ffffff"
        android:textSize="15dp" />

</LinearLayout>