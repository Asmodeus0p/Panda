<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="170dp"
    android:layout_margin="7dp"
    android:weightSum="2"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/pandaLiveLiveMorefillImage"
        android:layout_width="160dp"
        android:scaleType="fitXY"
        android:layout_height="80dp"
        android:layout_margin="1dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="15dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="-15dp"
        android:background="#808A87"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@mipmap/lpanda_live_layer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:text="LIVE"
            android:textColor="#ffffff" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:textSize="10sp"
        android:id="@+id/pandaLiveLiveMorefilltext"
        android:layout_height="wrap_content" />
</LinearLayout>