<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/china_live_popup_window_close"
        android:layout_width="28dp"
        android:layout_height="25dp"
        android:layout_gravity="right"
        android:background="@mipmap/com_facebook_tooltip_black_xout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/china_live_popup_window_visible_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="切换栏目"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/china_live_popup_window_gone_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/china_live_popup_window_visible_text"
            android:gravity="center"
            android:text="长按拖动可以排序"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/china_live_popup_window_commit"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#ffffff"
            android:button="@null"
            android:gravity="center"
            android:text="编辑" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/china_live_popup_window_tabList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"></android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点击添加更多条目"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/china_live_popup_window_allList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"></android.support.v7.widget.RecyclerView>

</LinearLayout>